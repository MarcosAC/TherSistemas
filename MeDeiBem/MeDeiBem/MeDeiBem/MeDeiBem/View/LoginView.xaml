<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeDeiBem.View.LoginView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
                <Image Source="logo.png"/>

                <Label Text="Login" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="#5258aa" FontSize="Large" />

                <Entry x:Name="TxtEmail" Text="{Binding Email}" Placeholder="E-Mail" PlaceholderColor="#989898" Keyboard="Email" TextChanged="TxtEmail_OnTextChange" />
                <Entry x:Name="TxtSenha" Text="{Binding Senha}" Placeholder="Senha" PlaceholderColor="#989898" IsPassword="True" TextChanged="TxtSenha_OnTextChanged" />

                <Button Text="Entrar" BackgroundColor="#ffd56d" Clicked="BtnEntrar_OnClicked" />
                <Button Text="Puts, Esqueci a Senha!" BackgroundColor="#ffd56d" Clicked="BtnEsqueciSenha_OnClicked" />
                <Button Text="Quero Participar!" BackgroundColor="#ffd56d" Clicked="BtnQueroParticipar_OnClicked" />
            </StackLayout>
        </ScrollView>        
    </ContentPage.Content>
</ContentPage>