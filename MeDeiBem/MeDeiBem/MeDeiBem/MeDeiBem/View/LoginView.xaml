<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeDeiBem.View.LoginView">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
            <Image Source="logo.png"/>
            <Label Text="Login" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="#5258aa" FontSize="Large" />
            <Entry Placeholder="E-Mail"/>
            <Entry Placeholder="Senha" IsPassword="True" />
            <Button Text="Entrar"/>
            <Button Text="Puts, Esqueci a Senha!"/>
            <Button Text="Quero Participar!" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>