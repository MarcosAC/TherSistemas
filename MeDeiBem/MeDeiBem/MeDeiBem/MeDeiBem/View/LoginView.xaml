<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeDeiBem.View.LoginView">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
            <Image Source="logo.png"/>
            <Label Text="Login" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="#5258aa" FontSize="Large" />
            <Entry Placeholder="E-Mail"/>
            <Entry Placeholder="Senha" IsPassword="True" />
            <Button Text="Entrar" BackgroundColor="#ffd56d" Clicked="BtnEntrar_Clicked" />
            <Button Text="Puts, Esqueci a Senha!" BackgroundColor="#ffd56d" Clicked="BtnEsqueciSenha_Clicked" />
            <Button Text="Quero Participar!" BackgroundColor="#ffd56d" Clicked="BtnQueroParticipar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>