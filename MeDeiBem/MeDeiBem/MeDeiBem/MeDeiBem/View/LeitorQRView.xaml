<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeDeiBem.View.LeitorQRView">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20">
            <StackLayout x:Name="EscanerQR" HeightRequest="410" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <StackLayout>
                <Label x:Name="LblCodigoQR" Text="Aguardando código qr..." HorizontalOptions="CenterAndExpand" />
                <Button x:Name="BtnBaixarDesconto" Text="Baixar Desconto" TextColor="#0057ff" BackgroundColor="#b1f1ff" Clicked="BtnBaixarDesconto_OnCliked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>